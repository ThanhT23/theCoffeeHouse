@model theCoffeeHouse.Models.TaiKhoan

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<style>
    table {
        text-align: center;
        border-top: 1px solid black;
        vertical-align: middle;
    }

        table td {
            text-align: center;
            line-height: 20px;
        }
</style>
<h2>Chi tiết tài khoản</h2>

<div>
    <h4>Thông tin</h4>

    <table class="table">
        <tr>
            <td width="200px">Tên Đăng Nhập</td>
            <td>@Html.DisplayFor(model => model.tenDangNhap)</td>
        </tr>
        <tr>
            <td>Mật Khẩu</td>
            <td>@Html.DisplayFor(model => model.matKhau)</td>
        </tr>
        <tr>
            <td>Loại</td>
            <td>@Html.DisplayFor(model => model.loai)</td>
        </tr>
    </table>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.tenDangNhap }) |
    @Html.ActionLink("Quay về", "Index")
</p>
