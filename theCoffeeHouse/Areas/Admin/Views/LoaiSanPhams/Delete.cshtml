@model theCoffeeHouse.Models.LoaiSanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
<style>
    table {
        text-align: center;
    }

        table a {
            font-size: 20px;
        }
    .link_button {
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
        background: #ffa128;
        color: white;
        padding: 8px 12px;
        text-decoration: none;
    }

</style>
<h2>Xóa</h2>

<h3>Bạn có chắc muốn xóa loại sản phẩm này không?</h3>
<div>
    <h4>Thông tin</h4>
    <hr />
    <table class="table">
        <tr>
            <td>Loại Sản Phẩm</td>
            <td>@Html.DisplayFor(model => model.loaiSanPham1)</td>
        </tr>
        <tr>
            <td>Giới Thiệu</td>
            <td>@Html.DisplayFor(model => model.gioiThieu)</td>
        </tr>


    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" />
            <a class="link_button" href="@Url.Action("Index", "LoaiSanPhams")"><i class="mdi mdi-undo-variant"></i>Quay Về</a>
        </div>
    }
</div>
@{
    if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
    }
}