        </tr>
        <tr>
            <td>Hàng Mới</td>
            <td>            @Html.DisplayFor(model => model.hangMoi)</td>
        </tr>
        <tr>
            <td>Hàng Mới</td>
            <td>@Html.DisplayFor(model => model.hangNong)</td>
        </tr>
        <tr>
