
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<meta charset="utf-8">
<title>Đăng Ký</title>
<!-- Mobile Specific Metas -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
<!-- Font-->
<link rel="stylesheet" type="text/css" href="~/Content/Register/css/opensans-font.css">
<link rel="stylesheet" type="text/css" href="~/Content/Register/fonts/line-awesome/css/line-awesome.min.css">
<!-- Jquery -->
<link rel="stylesheet" href="https://jqueryvalidation.org/files/demo/site-demos.css">
<!-- Main Style Css -->
<link rel="stylesheet" href="~/Content/Register/css/style.css" />

<div class="form-v7">
    <div class="page-content" style="background-image: url(images/f.jpg);">
        <div class="form-v7-content">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-detail", @id = "myform" }))
            {

                <div class="form-row">
                    <label for="username">Tên Đăng Nhập</label>
                    <input type="text" name="tenDangNhap" id="username" class="input-text" required>

                </div>
                <div>
                    @Html.ValidationMessage("tenDangNhapExsits")
                </div>

                <div class="form-row">
                    <label for="password">Mật Khẩu</label>
                    <input type="password" name="matKhau" id="password" class="input-text" required>
                </div>
                <div class="form-row">
                    <label for="comfirm_password">Nhập Lại Mật Khẩu</label>
                    <input type="password" name="ConfirmmatKhau" id="comfirm_password" class="input-text" required>
                </div>
                <div class="form-row-last">
                    <input type="submit" name="register" class="register" value="Đăng Ký">
                    <p>Hoặc<a href="@Url.Action("Login", "Account")">Đăng Nhập</a></p>
                </div>
                <div>
                    @Html.ValidationMessage("dangkyfailed")
                </div>



            }
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>
