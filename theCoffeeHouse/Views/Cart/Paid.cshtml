@model List<theCoffeeHouse.Models.CLASS.CartItem>
@{
    ViewBag.Title = "Paid";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@{
    var thongtin = ViewBag.UserData as theCoffeeHouse.Models.ThongTinKhachHang;
    
