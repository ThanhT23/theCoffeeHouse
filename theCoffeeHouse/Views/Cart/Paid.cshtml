                                    <div class="content">
                                        <ul>
                                            <li>Cộng<span>@ViewBag.Total</span> Đ</li>
                                            <li>Vận Chuyển<span>@ViewBag.Ship</span> Đ</li>
                                            <li class="last" style="font-weight: 700;">Tổng Cộng<span>@ViewBag.TotalPrice</span> Đ</li>
                                        </ul>
                                    </div>
                                </div>
