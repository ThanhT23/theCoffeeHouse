                                                <li><a href="" style="font-size: 13px; padding-left: 3px;padding-right: 3px;">ƯU ĐÃI</a></li>
                                                <li>
                                                    <a href="@Url.Action("hanhtrinh", "Pages")" style="font-size: 13px; padding-left: 3px;padding-right: 3px;">CHUYỆN CÀ PHÊ</a>
                                                    <ul class="dropdown" style="width:330px">
                                                        <li>
                                                            <a href="@Url.Action("hanhtrinh", "Pages")">Hành trình từ nông trại đến ly cà phê</a>
