                                                </li>
                                            </ul>

                                        </div>
                                </nav>


                                <!--/ End Main Menu -->
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-3 col-12">
                            <div class="right-bar">
                                @if (Session["CartSession"] != null)
                                {
                                    <div class="sinlge-bar shopping">
                                        <a href="@Url.Action("Index", "Cart")" class="single-icon">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="sinlge-bar shopping">
                                        <a href="" class="single-icon">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </div>
                                }

                                @if (Session["UserName"] != null)
                                {
                                    <div class="sinlge-bar shopping">
                                        <a href="#" class="single-icon">
                                            <i class="fa fa-user-circle-o"></i> @Session["UserName"]
                                        </a>
                                        <!-- Shopping Item -->
                                        <div class="shopping-item">
                                            <div class="bottom">
                                                <a href="@Url.Action("Index", "Order")" class="btn animate">Đơn Hàng Vừa Đặt</a>
                                            </div>
                                            @{
                                                if (Session["UserName"] != null)
                                                {
                                                    <div class="bottom">
                                                        <a href="@Url.Action("Index", "User")" class="btn animate">Thông Tin Cá Nhân</a>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="bottom">
                                                        <a href="@Url.Action("Login", "Account")" class="btn animate">Thông Tin Cá Nhân</a>
                                                    </div>
                                                }

                                            }
                                            <div class="bottom">
                                                <a href="@Url.Action("Logout", "Account")" class="btn animate">Thoát</a>
                                            </div>
                                        </div>
                                    </div>

                                }
                                else
                                {

                                    <div class="sinlge-bar">
                                        <a href="@Url.Action("Login", "Account")" class="single-icon" style="font-size: 12px;">
                                            <i class=""
                                               aria-hidden="true"></i>Đăng Nhập
                                        </a>
                                    </div>
                                }



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
